<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Game History</h3>

    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Game Name</th>
          <th scope="col">Score</th>
        </tr>
      </thead>
      <tbody>
        {{#quiz-data}}
        <tr>
          <td>{{date}}</td>
          <td>{{game-name}}</td>
          <td>{{score}}</td>
        </tr>
        {{/quiz-data}}
      </tbody>
    </table>

    <div>
      <button onclick="./views/login.handlebars" class="btn" type="submit">PLAY AGAIN</button>
    </div>

    <script src="./js/profile.js"></script>